{% extends 'base.html.twig' %}
{% block body %}
<!-- Education-->
<div class="container mt-5">
    <h2 class="mb-5">Projets</h2>
    {% for projet in projets %}
        <div class="row align-items-center mt-3">
            <div class="col-sm-2">
                <img class="img-fluid img-profile mx-auto mb-2" src="{{ asset('design/img/vide.jpg') }}">
            </div>
            <div class="subheading col-sm-8">
                <a href="{{ path('projetshow', {'slugProjet': projet.slugProjet}) }}">
                    <h4 class="mb-0">{{ projet.nomProjet }}</h4>
                </a>
                <p>{{ projet.descriptionProjet|u.truncate(200,'...',false) }}</p>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">

                    <h3 class="mb-0"></h3>

                <p></p>
            </div>
        </div>
    {% endfor %}
</div>
<div class="d-flex justify-content-center mt-3">
    {#{% do projets.setPageRange(2) %}#}
    {{ knp_pagination_render(projets, 'projets/pagination.html.twig') }}
</div>
{#<hr class="m-0" />#}
{% endblock %}