{% extends 'base.html.twig' %}
{% block body %}
<!-- Experience-->
    <div class="container mt-5">
        <h2 class="mb-5">Exp√©riences</h2>
    {% for exp in experiences %}
        <div class="experiences row mt-5">
            <div class=" col-10">
                <h3 class="mb-0">{{ exp.nomExperience }}</h3>
                <hr>
                <div class="subheading mb-3">
                    <p><i>-> {{ exp.entrepriseExperience }}</i></p>

                    <p>{{ exp.descriptifExperience }}</p>
                </div>

            </div>
            <div class="col-2 d-flex align-items-start">
                <span class="text-primary">{{ exp.dateDebutExperience|date("d/m/Y") }} - {{ exp.dateFinExperience|date("d/m/Y") }}</span>
            </div>
        </div>
    {% endfor %}
    </div>
    <div class="d-flex justify-content-center mt-3">
        {#{% do projets.setPageRange(2) %}#}
        {{ knp_pagination_render(experiences, 'experience/pagination.html.twig') }}
    </div>
{% endblock %}